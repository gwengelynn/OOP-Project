@page "/view-quiz-history"
@page "/quiz-history"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>View Quiz History</PageTitle>

<style>
body, html {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
    background: #61c2a2;
    min-height: 100vh;
}

/* NAVBAR */
.navbar {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 15px 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 2px 20px rgba(0,0,0,0.1);
    border-bottom: 1px solid rgba(255,255,255,0.2);
}

.nav-left {
    display: flex;
    align-items: center;
}

.profile-icon {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    margin-right: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: white;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.nav-links a {
    margin-left: 30px;
    text-decoration: none;
    color: #333;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 20px;
    transition: all 0.3s ease;
    position: relative;
}

.nav-links a:hover {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.logout {
    color: #e74c3c !important;
    font-weight: 600;
}

.logout:hover {
    background: #e74c3c !important;
    color: white !important;
}

/* MAIN CONTENT */
.view-quizzes-container {
    padding: 50px 40px;
    min-height: calc(100vh - 90px);
}

.view-quizzes-container h3 {
    margin-bottom: 30px;
    font-weight: 700;
    font-size: 2rem;
    color: white;
}

/* QUIZ GRID */
.quiz-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
}

/* QUIZ CARD */
.quiz-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 25px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(255,255,255,0.2);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 180px;
    animation: fadeInUp 0.6s ease forwards;
}

.quiz-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #61c2a2, #48a583, #667eea);
    border-radius: 20px 20px 0 0;
}

.quiz-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.quiz-card h5 {
    font-size: 1.3rem;
    margin-bottom: 12px;
    font-weight: 700;
    color: #2c3e50;
    display: flex;
    align-items: center;
    gap: 10px;
}

.quiz-card h5::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 2px;
}

.quiz-card p {
    color: #7f8c8d;
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 15px;
}

/* QUIZ FOOTER */
.quiz-footer {
    margin-top: 15px;
    font-size: 0.9rem;
    color: #7f8c8d;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 15px;
    border-top: 1px solid #e0e0e0;
}

/* BUTTON */
.quiz-footer button {
    border: none;
    border-radius: 12px;
    padding: 10px 20px;
    font-weight: 600;
    color: #fff;
    cursor: pointer;
    background: linear-gradient(135deg, #61c2a2, #48a583);
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.quiz-footer button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(97, 194, 162, 0.4);
}

/* Responsive Design */
@@media (max-width: 768px) {
    .view-quizzes-container {
        padding: 30px 20px;
    }
    
    .navbar {
        padding: 10px 20px;
    }
    
    .nav-links a {
        margin-left: 15px;
        padding: 6px 12px;
        font-size: 0.9rem;
    }
    
    .quiz-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }
    
    .view-quizzes-container h3 {
        font-size: 1.5rem;
    }
}

/* Animation */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.quiz-card:nth-child(1) { animation-delay: 0.1s; }
.quiz-card:nth-child(2) { animation-delay: 0.2s; }
.quiz-card:nth-child(3) { animation-delay: 0.3s; }
.quiz-card:nth-child(4) { animation-delay: 0.4s; }
.quiz-card:nth-child(5) { animation-delay: 0.5s; }
.quiz-card:nth-child(6) { animation-delay: 0.6s; }
</style>

<!-- NAVBAR -->
<div class="navbar">
    <div class="nav-left">
        <div class="profile-icon">ðŸ‘¤</div>
        <span style="color: #2c3e50; font-weight: 600; font-size: 1.1rem;">Profile</span>
    </div>
    <div class="nav-links">
        <a href="/studentdashboard">Dashboard</a>
        <a href="/notifications">Notifications</a>
        <a href="/view-quiz-history" style="font-weight:bold; background: linear-gradient(135deg, #61c2a2, #48a583); color: white;">View Quiz History</a>
        <a href="/take-quiz">Take Quiz</a>
        <a href="/" class="logout">Log out</a>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="view-quizzes-container">
    <h3>Quizzes taken:</h3>

    @if (quizzes.Count == 0)
    {
        <p style="color: rgba(255,255,255,0.9); font-size: 1.1rem;">No quizzes taken yet.</p>
    }
    else
    {
        <div class="quiz-grid">
            @foreach (var quiz in quizzes)
            {
                <div class="quiz-card">
                    <div>
                        <h5>@quiz.Title</h5>
                        <p>@quiz.Description</p>
                    </div>
                    <div class="quiz-footer">
                        <span><b>Final score:</b> @quiz.FinalScore</span>
                        <button @onclick="() => ViewResults(quiz.Id)">View Results</button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<QuizHistory> quizzes = new();

    protected override void OnInitialized()
    {
        quizzes = new List<QuizHistory>
        {
            new QuizHistory { Id = 1, Title = "Quiz #1", Description = "quiz overview... quiz overview... quiz overview...", FinalScore = "90%" },
            new QuizHistory { Id = 2, Title = "Quiz #2", Description = "quiz overview... quiz overview... quiz overview...", FinalScore = "85%" },
            new QuizHistory { Id = 3, Title = "Quiz #3", Description = "quiz overview... quiz overview... quiz overview...", FinalScore = "78%" },
            new QuizHistory { Id = 4, Title = "Quiz #4", Description = "quiz overview... quiz overview... quiz overview...", FinalScore = "88%" },
            new QuizHistory { Id = 5, Title = "Quiz #5", Description = "quiz overview... quiz overview... quiz overview...", FinalScore = "92%" },
            new QuizHistory { Id = 6, Title = "Quiz #6", Description = "quiz overview... quiz overview... quiz overview...", FinalScore = "75%" }
        };
    }

    private void ViewResults(int id)
    {
        Navigation.NavigateTo($"/quiz-results/{id}");
    }

    public class QuizHistory
    {
        public int Id { get; set; }
        public string? Title { get; set; }
        public string? Description { get; set; }
        public string? FinalScore { get; set; }
    }
}

