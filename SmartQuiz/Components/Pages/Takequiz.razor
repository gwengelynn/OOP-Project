@page "/take-quizzes"
@page "/take-quiz"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Take Quizzes</PageTitle>

<style>
body, html {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
    background: #61c2a2;
    min-height: 100vh;
}

/* NAVBAR */
.navbar {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 15px 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 2px 20px rgba(0,0,0,0.1);
    border-bottom: 1px solid rgba(255,255,255,0.2);
}

.nav-left {
    display: flex;
    align-items: center;
}

.profile-icon {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    margin-right: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: white;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.nav-links a {
    margin-left: 30px;
    text-decoration: none;
    color: #333;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 20px;
    transition: all 0.3s ease;
    position: relative;
}

.nav-links a:hover {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.logout {
    color: #e74c3c !important;
    font-weight: 600;
}

.logout:hover {
    background: #e74c3c !important;
    color: white !important;
}

/* MAIN CONTENT */
.take-quizzes-container {
    padding: 50px 40px;
    min-height: calc(100vh - 90px);
}

.take-quizzes-container h3 {
    margin-bottom: 30px;
    font-weight: 700;
    font-size: 2rem;
    color: white;
}

/* QUIZ GRID */
.quiz-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
}

/* QUIZ CARD */
.quiz-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 25px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(255,255,255,0.2);
    position: relative;
    overflow: hidden;
    animation: fadeInUp 0.6s ease forwards;
}

.quiz-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #61c2a2, #48a583, #667eea);
    border-radius: 20px 20px 0 0;
}

.quiz-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.quiz-card h5 {
    font-size: 1.3rem;
    margin-bottom: 12px;
    font-weight: 700;
    color: #2c3e50;
    display: flex;
    align-items: center;
    gap: 10px;
}

.quiz-card h5::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 2px;
}

.quiz-card p {
    color: #7f8c8d;
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 15px;
}

/* BUTTONS */
.button-group {
    margin-top: 15px;
    display: flex;
    gap: 10px;
}

.button-group button {
    border: none;
    border-radius: 12px;
    padding: 10px 20px;
    font-weight: 600;
    color: #fff;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.btn-primary {
    background: linear-gradient(135deg, #61c2a2, #48a583);
}

.button-group button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(97, 194, 162, 0.4);
}

/* FOOTER TEXT INSIDE CARD */
.quiz-footer {
    margin-top: 15px;
    font-size: 0.85rem;
    color: #7f8c8d;
    display: flex;
    justify-content: space-between;
    padding-top: 15px;
    border-top: 1px solid #e0e0e0;
}

/* QUIZ CODE SECTION */
.quiz-code-section {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    border: 1px solid rgba(255,255,255,0.2);
    position: relative;
    overflow: hidden;
    margin-bottom: 40px;
    animation: fadeInUp 0.6s ease forwards;
}

.quiz-code-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #61c2a2, #48a583, #667eea);
    border-radius: 20px 20px 0 0;
}

.quiz-code-section h3 {
    font-size: 1.5rem;
    margin-bottom: 20px;
    font-weight: 700;
    color: #2c3e50;
    display: flex;
    align-items: center;
    gap: 10px;
}

.quiz-code-section h3::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 2px;
}

.quiz-code-form {
    display: flex;
    gap: 15px;
    align-items: flex-end;
    flex-wrap: wrap;
}

.code-input-group {
    flex: 1;
    min-width: 200px;
}

.code-input-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #2c3e50;
    font-size: 0.9rem;
}

.code-input {
    width: 100%;
    padding: 12px 20px;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
    box-sizing: border-box;
}

.code-input:focus {
    outline: none;
    border-color: #61c2a2;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.2);
    transform: translateY(-2px);
}

.code-submit-btn {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    color: white;
    border: none;
    border-radius: 12px;
    padding: 12px 30px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
    white-space: nowrap;
}

.code-submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(97, 194, 162, 0.4);
}

.code-submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .take-quizzes-container {
        padding: 30px 20px;
    }
    
    .navbar {
        padding: 10px 20px;
    }
    
    .nav-links a {
        margin-left: 15px;
        padding: 6px 12px;
        font-size: 0.9rem;
    }
    
    .quiz-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }
    
    .take-quizzes-container h3 {
        font-size: 1.5rem;
    }
}

/* Animation */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.quiz-card:nth-child(1) { animation-delay: 0.1s; }
.quiz-card:nth-child(2) { animation-delay: 0.2s; }
.quiz-card:nth-child(3) { animation-delay: 0.3s; }
.quiz-card:nth-child(4) { animation-delay: 0.4s; }
</style>

<!-- NAVBAR -->
<div class="navbar">
    <div class="nav-left">
        <div class="profile-icon">üë§</div>
        <span style="color: #2c3e50; font-weight: 600; font-size: 1.1rem;">Profile</span>
    </div>

    <div class="nav-links">
        <a href="/studentdashboard">Dashboard</a>
        <a href="/notifications">Notifications</a>
        <a href="/view-quiz-history">View Quiz History</a>
        <a href="/take-quizzes" style="font-weight:bold; background: linear-gradient(135deg, #61c2a2, #48a583); color: white;">Take Quiz</a>
        <a href="/" class="logout">Log out</a>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="take-quizzes-container">
    <!-- QUIZ CODE SECTION -->
    <div class="quiz-code-section">
        <h3>üìù Enter Quiz Code</h3>
        <div class="quiz-code-form">
            <div class="code-input-group">
                <label for="quizCode">Quiz Code:</label>
                <input type="text" 
                       id="quizCode" 
                       class="code-input" 
                       @bind="quizCode" 
                       @bind:event="oninput"
                       placeholder="Enter your quiz code here..." 
                       maxlength="20" />
            </div>
            <button class="code-submit-btn" 
                    @onclick="TakeQuizWithCode" 
                    disabled="@(string.IsNullOrWhiteSpace(quizCode))">
                Take Quiz
            </button>
        </div>
    </div>

    <h3>Available Quizzes:</h3>

    @if (quizzes is null || quizzes.Count == 0)
    {
        <p style="color: rgba(255,255,255,0.9); font-size: 1.1rem;">No quizzes available at the moment. Check back later!</p>
    }
    else
    {
        <div class="quiz-grid">
            @foreach (var quiz in quizzes)
            {
                <div class="quiz-card">
                    <h5>@quiz.Title</h5>
                    <p>@quiz.Description</p>

                    <div class="button-group">
                        <button class="btn-primary" @onclick="() => TakeQuiz(quiz.Id)">Take Quiz</button>
                    </div>

                    <div class="quiz-footer">
                        <span>Due: @quiz.DueDate?.ToString("MMM dd, yyyy")</span>
                        <span>@quiz.NumberOfQuestions questions</span>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Quiz>? quizzes;
    private string quizCode = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        quizzes = await GetAvailableQuizzes();
    }

    private Task<List<Quiz>> GetAvailableQuizzes()
    {
        var mockQuizzes = new List<Quiz>
        {
            new() { Id = 1, Title = "Quiz 1", Description = "Quiz 1.", NumberOfQuestions = 15, DueDate = DateTime.Now.AddDays(2) },
            new() { Id = 2, Title = "Quiz 2", Description = "Quiz 2.", NumberOfQuestions = 10, DueDate = DateTime.Now.AddDays(3) },
            new() { Id = 3, Title = "Quiz 3", Description = "Quiz 3.", NumberOfQuestions = 10, DueDate = DateTime.Now.AddDays(6) },
            new() { Id = 4, Title = "Quiz 4", Description = "Quiz 4.", NumberOfQuestions = 10, DueDate = DateTime.Now.AddDays(9) },
        };

        return Task.FromResult(mockQuizzes);
    }

    private void TakeQuiz(int id)
    {
        Navigation.NavigateTo($"/take-quiz/{id}");
    }

    private void TakeQuizWithCode()
    {
        if (!string.IsNullOrWhiteSpace(quizCode))
        {
            // Navigate to take quiz with the entered code
            Navigation.NavigateTo($"/take-quiz-code/{quizCode.Trim().ToUpper()}");
            Console.WriteLine($"Taking quiz with code: {quizCode}");
        }
    }

    public class Quiz
    {
        public int Id { get; set; }
        public string? Title { get; set; }
        public string? Description { get; set; }
        public int NumberOfQuestions { get; set; }
        public DateTime? DueDate { get; set; }
    }
}

