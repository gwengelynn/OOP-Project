@page "/leaderboard"
@inject NavigationManager Navigation

<PageTitle>Leaderboard</PageTitle>

<style>
body, html {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
    background-color: #f9f9f9;
}

/* NAVBAR */
.navbar {
    background-color: #61c2a2;
    padding: 10px 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.nav-left {
    display: flex;
    align-items: center;
}

.profile-icon {
    background-color: #fff;
    border-radius: 50%;
    width: 35px;
    height: 35px;
    margin-right: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}

.nav-links a {
    margin-left: 25px;
    text-decoration: none;
    color: #000;
    font-weight: 500;
}

.nav-links a:hover {
    text-decoration: underline;
}

/* MAIN CONTENT */
.leaderboard-container {
    padding: 40px;
}

h3 {
    margin-bottom: 25px;
    font-weight: 700;
}

/* QUIZ GRID */
.quiz-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
}

/* QUIZ CARD */
.quiz-card {
    background-color: #ffffff;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
    cursor: pointer;
}

.quiz-card:hover {
    transform: translateY(-4px);
}

.quiz-card h5 {
    margin-bottom: 8px;
    font-weight: 600;
}

.quiz-card p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.3;
}
</style>

<!-- NAVBAR -->
<div class="navbar">
    <div class="nav-left">
        <div class="profile-icon">ðŸ‘¤</div>
        <span style="color: white; font-weight: 600;">Profile</span>
    </div>

    <div class="nav-links">
        <a href="/teacherdashboard">Dashboard</a>
        <a href="/view-quizzes">View Quizzes</a>
        <a href="/leaderboard" style="font-weight: bold;">View Leaderboard</a>
        <a href="/createquiz">Create A Quiz</a>
        <a href="/" class="logout">Log out</a>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="leaderboard-container">
    <h3>ðŸ“Š Quiz Leaderboards</h3>
    <div class="quiz-grid">
        @foreach (var quiz in quizzes)
        {
            <div class="quiz-card" @onclick="() => OpenLeaderboard(quiz.Id)">
                <h5>@quiz.Title</h5>
                <p>@quiz.Description</p>
                <p style="font-size:0.85rem;color:#61c2a2;">Click to view leaderboard âžœ</p>
            </div>
        }
    </div>
</div>

@code {
    private List<Quiz> quizzes = new();

    protected override void OnInitialized()
    {
        quizzes = new List<Quiz>
        {
            new Quiz { Id = 1, Title = "Quiz #1", Description = "General Knowledge Quiz" },
            new Quiz { Id = 2, Title = "Quiz #2", Description = "Science and Nature" },
            new Quiz { Id = 3, Title = "Quiz #3", Description = "Math Fundamentals" },
            new Quiz { Id = 4, Title = "Quiz #4", Description = "History and Politics" },
        };
    }

    private void OpenLeaderboard(int quizId)
    {
        Console.WriteLine($"Navigating to leaderboard for quiz {quizId}");
        Navigation.NavigateTo($"/leaderboard/{quizId}");
    }

    public class Quiz
    {
        public int Id { get; set; }
        public string? Title { get; set; }
        public string? Description { get; set; }
    }
}
